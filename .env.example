# Server Configuration
PORT=9000
NODE_ENV=development
MEDUSA_BACKEND_URL=http://localhost:9000

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database
# Local DB: DATABASE_URL=postgres://postgres:@localhost:5432/medusa-backend-andmore
# SQLite (deprecated): DATABASE_URL=sqlite:///database.sqlite

# Redis Cache
REDIS_URL=redis://localhost:6379

# Security Secrets - Using stronger secrets for better security
JWT_SECRET=your_jwt_secret_here
COOKIE_SECRET=your_cookie_secret_here

# CORS Settings - Include all possible frontend origins
STORE_CORS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:8000
ADMIN_CORS=http://localhost:7000,http://localhost:7001,http://localhost:9000,http://127.0.0.1:7000,http://127.0.0.1:7001,http://127.0.0.1:9000
AUTH_CORS=http://localhost:3000,http://localhost:3001,http://localhost:7000,http://localhost:7001,http://localhost:5173,http://localhost:8000,http://localhost:9000,http://127.0.0.1:3000,http://127.0.0.1:7000,http://127.0.0.1:8000,http://127.0.0.1:9000

# Customer Registration - Ensure these are enabled
ALLOW_CUSTOMER_REGISTRATION=true
ALLOW_GUEST_CUSTOMER_CHECKOUT=true

# Stripe Keys (Test Environment)
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Database Name
DB_NAME=medusa-backend-andmore 